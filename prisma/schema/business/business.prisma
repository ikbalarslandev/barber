model Business {
  id String @id @default(cuid())

  name  String @unique
  email String @unique @default(cuid())

  type EType @default(PUBLIC)
  isHistorical Boolean @default(false)

  workingHours String[] @default(["07:30", "00:00"])
  blockedHours String[]

  location   Location? @relation(fields: [locationId], references: [id])
  locationId String?   @unique
  products   Product[]
  bookings   Booking[]
}

model Location {
  id String @id @default(cuid())

  countryCode String  @default("TR")
  city        String  @default("Ä°stanbul")
  coordinates Float[]
  address     String  @default("")
  postalCode  String  @default("")

  business Business?
}



enum EType {
PUBLIC
PRIVATE
}