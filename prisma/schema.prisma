generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id       String    @id @default(cuid())
  name     String
  phone    String
  email    String
  products Product[]
  bookings Booking[]
}

model Product {
  id         String   @id @default(cuid())
  name       String
  duration   Int      @default(30)
  price      Float
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
}

model Booking {
  id      String   @id @default(cuid())
  date    DateTime
  note    String?
  //customer
  c_name  String
  c_phone String
  c_email String

  //product
  products   String[]
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
}
