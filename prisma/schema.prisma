generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id    String @id @default(cuid())
  name  String @unique
  email String @unique @default(cuid())

  coordinates Float[]
  address     String  @default("")
  postalCode  String  @default("")

  workingHours String[] @default(["07:30", "00:00"])
  blockedHours String[]

  products Product[]
  bookings Booking[]
}

model Product {
  id   String  @id @default(cuid())
  name String
  desc String   @default("İşletmede bulunan tüm fiziksel imkanlardan faydalanabilirsiniz. fakat herhangi bir hizmet bu paket dahilinde değildir. örnek olarak masaj, kese, v.b. hizmetler bu pakete dahil değildir.")

  duration Int   @default(30)
  price    Float

  businessId String
  business   Business @relation(fields: [businessId], references: [id])
}

model Booking {
  id   String @id @default(cuid())
  hour String //HH:mm

  //customer
  c_name  String
  c_phone String
  c_email String

  //product
  products   String[]
  businessId String
  business   Business @relation(fields: [businessId], references: [id])

  createdAt DateTime @default(now())
}
