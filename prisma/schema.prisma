generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id       String    @id @default(cuid())
  name     String
  phone    String
  email    String
  products Product[]
}

model Product {
  id         String   @id @default(cuid())
  name       String
  duration   Int      @default(30)
  price      Float
  businessId String
  business   Business @relation(fields: [businessId], references: [id])

  bookings Booking[] @relation("BookingToProduct")
}

model Booking {
  id    String   @id @default(cuid())
  date  DateTime
  //customer
  c_name  String
  c_phone String
  c_email String

  //
  products Product[] @relation("BookingToProduct")
}
